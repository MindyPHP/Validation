{
    "name": "mindy/validation",
    "type": "library",
    "description": "The Validation Constraints",
    "license": "MIT",
    "authors": [
        {
            "name": "Falaleev Maxim",
            "email": "max@mindy-cms.com"
        }
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Mindy\\Validation\\": ""
        },
        "exclude-from-classmap": [
            "**/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mindy\\Validation\\Tests\\": ""
        }
    },
    "require": {
        "php": ">=7.0",
        "symfony/validator": "~3.0 || ~4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    }
}
